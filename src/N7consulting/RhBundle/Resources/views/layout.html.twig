{# layout père du rh bundle #}
{% extends "::layout.html.twig" %}

{% block title %}
    RH - {{ parent() }}
{% endblock %}

{% block content %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                {% block content_title %}
                    Gestion RH
                {% endblock %}
            </h3>
            {% block breadcrumb %}
                <ul class="breadcrumb no-margin pull-right">
                    <li>
                        <a href="{{ path('N7consultingRh_competence_homepage') }}">
                            {{ 'dashboard.rh_competences'|trans({}, 'dashboard') }}
                        </a>
                    </li>
                    {% block breadcrumb_items %}{% endblock %}
                    <li class="active">
                        {% block breadcrumb_active %}{% endblock %}
                    </li>
                </ul>
            {% endblock %}
        </div>
        <div class="box-body">
            {# On définit un nouveau block, que les vues du bundle pourront remplir #}
            {% block content_bundle %}
            {% endblock %}

        </div>
        <div class="box-footer"></div>
    </div>

{% endblock %}
